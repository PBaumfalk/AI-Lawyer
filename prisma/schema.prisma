// ─── E-Mail ──────────────────────────────────────────────────────────────────

model EmailMessage {
  id            String         @id @default(cuid())
  messageId     String?        @unique // Original Message-ID header
  akteId        String?
  akte          Akte?          @relation(fields: [akteId], references: [id], onDelete: SetNull)
  beteiligterId String?
  beteiligter   Beteiligter?   @relation(fields: [beteiligterId], references: [id], onDelete: SetNull)
  richtung      EmailRichtung  @default(EINGEHEND)
  betreff       String
  absender      String
  absenderName  String?
  empfaenger    String[]
  cc            String[]
  inhalt        String?        @db.Text // HTML or plain text body
  inhaltText    String?        @db.Text // Plain text version
  empfangenAm   DateTime?
  gesendetAm    DateTime?
  gelesen       Boolean        @default(false)
  veraktet      Boolean        @default(false)
  ticketId      String?
  ticket        Ticket?        @relation(fields: [ticketId], references: [id], onDelete: SetNull)
  anhangDokumentIds String[]   // IDs of documents stored in DMS
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([akteId])
  @@index([empfangenAm])
  @@index([veraktet])
  @@index([gelesen])
  @@map("email_messages")
}

// ─── E-Mail Konten & Nachrichten (Phase 3) ──────────────────────────────────

model EmailKonto {
  id               String          @id @default(cuid())
  name             String          // Display name, e.g. "Kanzlei Hauptpostfach"
  emailAdresse     String          // Full email address
  benutzername     String          // Login username (often same as emailAdresse)
  passwortEnc      String?         // AES-256-GCM encrypted password
  oauthTokens      Json?           // OAuth2 tokens: { accessToken, refreshToken, expiresAt }
  authTyp          EmailAuthTyp    @default(PASSWORT)
  // IMAP configuration
  imapHost         String
  imapPort         Int             @default(993)
  imapSecure       Boolean         @default(true)
  // SMTP configuration
  smtpHost         String
  smtpPort         Int             @default(587)
  smtpSecure       Boolean         @default(false)
  // Settings
  istKanzlei       Boolean         @default(false)  // Shared firm-wide mailbox
  aktiv            Boolean         @default(true)
  initialSync      EmailInitialSync @default(DREISSIG_TAGE)
  syncStatus       EmailSyncStatus @default(GETRENNT)
  letzterSync      DateTime?
  fehlerLog        Json?           // Last 5 errors: [{ timestamp, message }]
  softDeleteTage   Int             @default(30)     // Days before permanent email deletion
  // Signature
  signaturVorlage  String?         @db.Text         // Kanzlei-wide HTML signature template
  signaturPlaceholders Json?       // User field definitions for signature
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // Relations
  zuweisungen      EmailKontoZuweisung[]
  ordner           EmailOrdner[]
  nachrichten      EmailNachricht[]

  @@index([aktiv])
  @@index([emailAdresse])
  @@map("email_konten")
}

model EmailKontoZuweisung {
  id        String   @id @default(cuid())
  kontoId   String
  konto     EmailKonto @relation(fields: [kontoId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([kontoId, userId])
  @@index([userId])
  @@map("email_konto_zuweisungen")
}

model EmailOrdner {
  id               String          @id @default(cuid())
  kontoId          String
  konto            EmailKonto      @relation(fields: [kontoId], references: [id], onDelete: Cascade)
  name             String          // Display name, e.g. "INBOX", "Sent"
  pfad             String          // Full IMAP path, e.g. "INBOX", "INBOX.Sent"
  spezialTyp       EmailSpezialTyp @default(CUSTOM)
  ungeleseneAnzahl Int             @default(0)
  gesamtAnzahl     Int             @default(0)
  sortierung       Int             @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // Relations
  nachrichten      EmailNachricht[]

  @@unique([kontoId, pfad])
  @@index([kontoId])
  @@map("email_ordner")
}

model EmailNachricht {
  id               String            @id @default(cuid())
  emailKontoId     String
  emailKonto       EmailKonto        @relation(fields: [emailKontoId], references: [id], onDelete: Cascade)
  emailOrdnerId    String?
  emailOrdner      EmailOrdner?      @relation(fields: [emailOrdnerId], references: [id], onDelete: SetNull)
  // IMAP tracking
  imapUid          Int?
  imapFolder       String?           // IMAP folder path at time of sync
  messageId        String?           @unique // Original Message-ID header
  inReplyTo        String?           // In-Reply-To header
  references       String[]          // References header (for threading)
  threadId         String?           // Computed thread identifier
  // Direction & content
  richtung         EmailRichtung     @default(EINGEHEND)
  betreff          String
  absender         String
  absenderName     String?
  empfaenger       String[]
  cc               String[]
  bcc              String[]
  inhalt           String?           @db.Text // Sanitized HTML body
  inhaltText       String?           @db.Text // Plain text version
  // Dates
  empfangenAm      DateTime?
  gesendetAm       DateTime?
  // Flags
  gelesen          Boolean           @default(false)
  flagged          Boolean           @default(false)
  prioritaet       EmailPrioritaet   @default(NORMAL)
  groesse          Int?              // Message size in bytes
  // Case assignment
  veraktet         Boolean           @default(false)
  verantwortlichId String?
  verantwortlich   User?             @relation("EmailVerantwortlicher", fields: [verantwortlichId], references: [id], onDelete: SetNull)
  // Soft delete
  geloescht        Boolean           @default(false)
  geloeschtAm      DateTime?
  // Send status (for outgoing)
  sendeStatus      EmailSendeStatus?
  geplanterVersand DateTime?
  sendeFehler      String?
  // Ticket link
  ticketId         String?
  ticket           Ticket?           @relation(fields: [ticketId], references: [id], onDelete: SetNull)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  // Relations
  anhaenge         EmailAnhang[]
  veraktungen      EmailVeraktung[]

  @@index([emailKontoId])
  @@index([emailOrdnerId])
  @@index([threadId])
  @@index([empfangenAm])
  @@index([gelesen])
  @@index([veraktet])
  @@index([geloescht])
  @@index([verantwortlichId])
  @@index([sendeStatus])
  @@index([absender])
  @@map("email_nachrichten")
}

model EmailAnhang {
  id               String         @id @default(cuid())
  emailNachrichtId String
  emailNachricht   EmailNachricht @relation(fields: [emailNachrichtId], references: [id], onDelete: Cascade)
  dateiname        String
  mimeType         String
  groesse          Int            // bytes
  speicherPfad     String         // MinIO storage key
  contentId        String?        // For inline images (cid: references)
  createdAt        DateTime       @default(now())

  @@index([emailNachrichtId])
  @@map("email_anhaenge")
}

model EmailVeraktung {
  id               String         @id @default(cuid())
  emailNachrichtId String
  emailNachricht   EmailNachricht @relation(fields: [emailNachrichtId], references: [id], onDelete: Cascade)
  akteId           String
  akte             Akte           @relation(fields: [akteId], references: [id], onDelete: Cascade)
  userId           String
  user             User           @relation(fields: [userId], references: [id])
  notiz            String?        @db.Text
  anhaengeKopiert  Boolean        @default(false)
  dmsOrdner        String?        // Target DMS folder within the Akte
  aufgehoben       Boolean        @default(false)
  aufgehobenAm     DateTime?
  createdAt        DateTime       @default(now())

  @@index([emailNachrichtId])
  @@index([akteId])
  @@index([userId])
  @@map("email_veraktungen")
}

// ─── Tickets / Aufgaben ─────────────────────────────────────────────────────

model Ticket {
  id                   String           @id @default(cuid())
  akteId               String?
  akte                 Akte?            @relation(fields: [akteId], references: [id], onDelete: SetNull)
  titel                String
  beschreibung         String?          @db.Text
  status               TicketStatus     @default(OFFEN)
  prioritaet           TicketPrioritaet @default(NORMAL)
  faelligAm            DateTime?
  verantwortlichId     String?
  verantwortlich       User?            @relation("TicketVerantwortlicher", fields: [verantwortlichId], references: [id], onDelete: SetNull)
  tags                 String[]
  erledigtAm           DateTime?
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt

  // AI-Runner locking: prevents double processing of the same ticket
  aiLockedAt           DateTime?        // When the lock was acquired (null = unlocked)
  aiLockedBy           String?          // Runner identifier (e.g. hostname or random ID)

  emails               EmailMessage[]
  emailNachrichten     EmailNachricht[]

  @@index([akteId])
  @@index([verantwortlichId])
  @@index([status])
  @@index([faelligAm])
  @@map("tickets")
}

// ─── Audit ───────────────────────────────────────────────────────────────────

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  akteId    String?
  akte      Akte?    @relation(fields: [akteId], references: [id], onDelete: SetNull)
  aktion    String   // e.g. "AKTE_ERSTELLT", "DOKUMENT_HOCHGELADEN"
  details   Json?    // Additional context
  ipAdresse String?
  createdAt DateTime @default(now())

  @@index([akteId])
  @@index([userId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ─── Notifications ──────────────────────────────────────────────────────────

model Notification {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // e.g. "job:completed", "job:failed", "document:created"
  title       String
  message     String
  data        Json?    // Arbitrary payload (link target, jobId, akteId, etc.)
  read        Boolean  @default(false)
  dismissed   Boolean  @default(false)
  soundType   String?  // Optional sound identifier
  createdAt   DateTime @default(now())

  @@index([userId, read])
  @@index([userId, createdAt])
  @@map("notifications")
}

// ─── System Settings ────────────────────────────────────────────────────────

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  type      String   @default("string") // string, number, boolean, json
  category  String   @default("general")
  label     String?  // German display label
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([category])
  @@map("system_settings")
}
