  absender        String
  empfaenger      String
  inhalt          String?            @db.Text
  status          BeaNachrichtStatus @default(EINGANG)
  pruefprotokoll  Json?
  anhaenge        Json?              // Array of attachment references
  gesendetAm      DateTime?
