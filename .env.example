# Database
DATABASE_URL="postgresql://ailawyer:ailawyer@localhost:5432/ailawyer?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-change-in-production"

# MinIO (S3-compatible file storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="ailawyer"
MINIO_SECRET_KEY="ailawyer123"
MINIO_BUCKET="dokumente"
MINIO_USE_SSL="false"

# Meilisearch (full-text search)
MEILISEARCH_URL="http://localhost:7700"
MEILISEARCH_API_KEY="ailawyer-meili-key"

# AI / LLM
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
# Local dev: http://localhost:11434 | Docker Compose: http://ollama:11434
OLLAMA_BASE_URL="http://localhost:11434"
# Default model pulled automatically on first `docker compose up` (persisted in volume)
OLLAMA_DEFAULT_MODEL="mistral:7b"
# Context window size for Ollama (default 32k). Requires ~20 GB RAM for 7B models.
# Reduce to 8192 or 4096 on low-memory systems.
OLLAMA_NUM_CTX="32768"
AI_PROVIDER="openai"  # openai | anthropic | ollama
AI_MODEL="gpt-4o"

# Redis (required) — used by BullMQ job queues and Socket.IO adapter
# Docker Compose: redis://redis:6379 | Local dev: redis://localhost:6379
REDIS_URL="redis://localhost:6379"

# Logging
# Log level: trace | debug | info | warn | error | fatal (default: info)
LOG_LEVEL="info"
# Log file path for production file rotation (default: /var/log/ai-lawyer/app)
LOG_FILE_PATH="/var/log/ai-lawyer/app"

# Worker
# Number of concurrent jobs per queue processed by the worker (default: 5)
WORKER_CONCURRENCY="5"

# OnlyOffice Document Server
ONLYOFFICE_URL="http://localhost:8080"
ONLYOFFICE_SECRET="your-onlyoffice-secret"
# Internal URL for OnlyOffice health checks — used by /api/health endpoint
# Docker Compose: http://onlyoffice:80 | Local dev: http://localhost:8080
ONLYOFFICE_INTERNAL_URL="http://localhost:8080"
# URL that ONLYOFFICE (in Docker) uses to reach the Next.js app
# macOS/Windows: http://host.docker.internal:3000
# Linux: http://172.17.0.1:3000 (or use Docker network)
APP_INTERNAL_URL="http://host.docker.internal:3000"

# SMTP (Email delivery for Frist reminders)
# Leave SMTP_USER empty to disable email delivery (in-app notifications still work)
# Local dev: use Mailpit (localhost:1025) or similar for testing
SMTP_HOST="localhost"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@kanzlei.local"

# OpenClaw AI Agent Gateway
# Local dev: http://localhost:18789 | Docker Compose: http://openclaw-gateway:18789
OPENCLAW_GATEWAY_URL="http://localhost:18789"
OPENCLAW_GATEWAY_TOKEN="your-openclaw-token-change-in-production"
